<% prefectures=["北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県","茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県","新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県","静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"] %>
<% ugs=["経済学部","経営学部","文学部","ネットワーク情報学部","人間科学部"] %>

<table style="width: 80%; font-size: 16px; margin: 3% auto; text-align: center;" align="center">
  <tr>
    <td>
      <%= image_tag @user.image.url, class: 'rounded-circle', size: '80x80' %>
    </td>
    <td>
      フォロワー<br><%= @user.followers.count %>
    </td>
    <td>
      フォロー<br><%= @user.followings.count %>
    </td>
  </tr>
  <tr>
    <td colspan="3">
      <%= form.label :image, "プロフィール画像を編集", class: "image_input_btn" %>
      <%= form.file_field :image, accept: 'image/*', style: "display: none;" %>
      <%= form.hidden_field :image_cache %>
    </td>
  </tr>
</table>

<table style="width: 100%; font-size: 16px;">
  <tr>
    <th>名前</th>
    <td><%= form.text_field :name, style: "width: 80%; font-size: 16px;" %></td>
  </tr>
  <tr>
    <th>性別</th>
    <td>
      <%= form.radio_button :sex, 1 %>
      <%= form.label :sex_1, "男性" %>
      <%= form.radio_button :sex, 2 %>
      <%= form.label :sex_2, "女性" %>
      <%= form.radio_button :sex, 3 %>
      <%= form.label :sex_3, "なし" %>
    </td>
  </tr>
  <tr>
    <th>出身地</th>
    <td><%= form.select :birthplace, prefectures, { include_blank: '選択してください' }, style: "font-size: 16px;" %></td>
  </tr>
  <tr>
    <th>学部</th>
    <td><%= form.select :undergraduate, ugs, { include_blank: '選択してください' }, style: "font-size: 16px;" %></td>
  </tr>
  <tr>
    <th>学年</th>
    <td><%= form.select :grade, [1,2,3,4,5,6,7,8], { include_blank: '選択してください' }, style: "font-size: 16px;" %></td>
  </tr>
  <tr>
    <th>コメント</th>
    <td><%= form.text_area :comment, rows: "3%", style: "width: 80%; font-size: 16px;" %></td>
  </tr>

  <tr>
    <th>Twitter</th>
    <td><%= form.text_field :twitter, style: "width: 80%; font-size: 16px;", placeholder: "例：@Twitter" %></td>
  </tr>
  <tr>
    <th>Instagram</th>
    <td><%= form.text_field :instagram, style: "width: 80%; font-size: 16px;", placeholder: "例：@instagram" %></td>
  </tr>
</table>
