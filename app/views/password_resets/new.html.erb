<h2><%= @user.name %>さん</h2>
<%= form_for @user, method: :post, url: {controller: 'password_resets', action: 'create' } do |form| %>
  <table>
    <%= form.hidden_field :uid %>
    <tr>
      <th>新しいパスワード</th>
      <td><%= form.password_field :password %></td>
    </tr>
    <tr>
      <th>確認用</th>
      <td><%= form.password_field :password_confirmation %></td>
    </tr>
  </table>

  <div><%= form.submit "変更" %></div>
<% end %>
