<h2 style="font-size:150%;">
  <div class="back">
    <%= link_to :new_request do %>
      < 前ページ
    <% end %>
  </div>
</h2>

<table style="width: 100%">
  <% @requests.each do |r| %>
    <tr>
      <th style="text-align: left; padding-top: 15px; width: 80％;">投稿日時：<%= r.updated_at.strftime("%-m月%-d日 %H:%M") %></th>
    </tr>
    <tr style="padding: 10px 0;">
      <td style="border: black 1px solid; border-color: black;"><%= r.content %></td>
      <% if r.response.present? %>
        <td>
          <%= link_to "回答を確認", r %>｜
          <%= link_to "削除", r, method: :delete, data: { confirm: "本当に削除しますか?" } %>
        </td>
      <% else %>
        <td style="width: 20％;"><%= link_to "削除", r, method: :delete, data: { confirm: "本当に削除しますか?" } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<br><br>
