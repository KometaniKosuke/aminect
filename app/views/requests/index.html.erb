<h2 style="font-size:150%;">
  <div class="back">
    <%= link_to :new_request do %>
      < 自分の質問
    <% end %>
  </div>
</h2>


<table style="width: 100%">
  <% @requests.each do |r| %>
    <tr>
      <th style="text-align: left; padding-top: 15px;">投稿日時　<%= r.updated_at.strftime("%-m月%-d日 %H:%M") %></th>
    </tr>
    <tr style="padding: 10px 0;">
      <td style="border: black 1px solid; border-color: black;"><%= r.content %></td>
      <td style="width: 20％; padding-left: 5px;">
        <%= link_to "削除", r, method: :delete, data: { confirm: "本当に削除しますか?" } %>
      </td>
    </tr>
  <% end %>
</table>
