<table>
  <tr>
    <th>プロフィール写真</th>
    <td><%= image_tag @user.image.url, class: 'rounded-circle', size: '50x50' %></td>
  </tr>
  <tr>
    <th>ニックネーム</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>性別</th>
    <td>
      <% if @user.sex==1 %>男性
      <% elsif @user.sex==2 %>女性
      <% else %>--
      <% end %>
    </td>
  </tr>
  <tr>
    <th>出身地</th>
    <td><%= @user.birthplace %></td>
  </tr>
  <tr>
    <th>学部</th>
    <td><%= @user.undergraduate %></td>
  </tr>
  <tr>
    <th>コメント</th>
    <td><%= @user.comment %></td>
  </tr>
</table>
<% if @user.twitter.present? %>
  <% tw = 'https://twitter.com/'.concat(@user.twitter) %>
  <ul><%= link_to 'Twitter', tw %></ul>
<% end %>
<% if @user.instagram.present? %>
  <% i = 'https://www.instagram.com/'.concat(@user.instagram) %>
  <ul><%= link_to 'Instagram', i %></ul>
<% end %>
<% if @user.tiktok.present? %>
  <% ti = 'https://www.tiktok.com/'.concat(@user.tiktok) %>
  <ul><%= link_to 'TikTok', ti %></ul>
<% end %>
<table>
  <tr align="center">
    <% urs=UserRoom.where(user_id: current_user.id) %>
    <% a=0 %>
    <% room_url=Room.new() %>
    <% urs.each do |ur| %>
      <% i = UserRoom.find_by(user_id: @user.id, room_id: ur.room_id) %>
      <% if i.present? %>
        <% a=1 %>
        <% room_url=Room.find(ur.room_id) %>
      <% end %>
    <% end %>
    <% if a!=0 %>
      <td><%= link_to "メッセージ", room_url %></td>
    <% else %>
      <td><%= link_to "ルーム作成", new_user_room_path(@user) %></td>
    <% end %>
  </tr>
</table>
<br>

