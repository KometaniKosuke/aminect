<h2>告知一覧</h2>
<% if flash.notice %>
  <p class="notice"><%= flash.notice %></p>
<% end %>

<table style="padding-left: 3%; width: 100%">
  <tr>
    <td><%= link_to "新しい投稿", :new_admin_announce %></td>
  </tr>
  <% @announces.each do |a| %>
    <tr>
      <th style="text-align: left; padding-top: 15px;">変更日時<%= a.updated_at.strftime("%-m月%-d日 %H:%M") %></th>
    </tr>
    <tr style="padding: 10px 0;">
      <td style="border: black 1px solid; border-color: black;"><%= a.text %></td>
      <td style="width: 20％; padding-left: 5px;">
        <%= link_to "編集", [:edit, :admin, a] %> |
        <%= link_to "削除", [:admin, a], method: :delete, data: { confirm: "本当に削除しますか?" } %>
      </td>
    </tr>
  <% end %>
</table>
