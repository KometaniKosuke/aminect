<table align=center width="90%" border="1">
  <tr>
    <th>見出し</th>
    <td><%= @announce.title %></td>
  </tr>
  <tr>
    <th width=10%>内容</th>
    <td><%= @announce.text %></td>
  </tr>
  <tr>
    <th>URLタイトル</th>
    <td><%= @announce.url_title %></td>
  </tr>
  <tr>
    <th>URL</th>
    <td><%= @announce.url %></td>
  </tr>
  <tr>
    <th>対象ユーザ</th>
    <td>
      <% if @announce.user_id==nil %>
        全員
      <% elsif @announce.user_id==0 %>
        アンケート
      <% else %>
        id:<%= @announce.user_id %> / <%= User.find(@announce.user_id) %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td colspan="2" style="width: 20％; padding-left: 5px;">
      <%= link_to "編集", [:edit, :admin, @announce] %> |
      <%= link_to "削除", [:admin, @announce], method: :delete, data: { confirm: "本当に削除しますか?" } %>
    </td>
  </tr>
</table>
