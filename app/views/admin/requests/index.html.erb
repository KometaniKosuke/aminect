<h2>質問一覧</h2>

<table style="padding-left: 3%; width: 100%;">
  <% @requests.each do |r| %>
    <tr>
      <th style="text-align: left; padding-top: 15px;">投稿者：<%= User.find(r.user_id).name %> さん</th>
    </tr>
    <tr>
      <th style="text-align: left;">投稿日時：<%= r.created_at.strftime("%-m月%-d日(%H:%M)") %></th>
    </tr>
    <tr style="padding: 10px 0;">
      <td style="border: black 1px solid; border-color: black;"><%= r.content %></td>
      <% if r.response.nil? %>
        <td style="width: 20％; padding-left: 5px;"><%= link_to "回答する", [:edit_admin, r] %></td>
      <% else %>
        <td style="width: 20％; padding-left: 5px;"><%= link_to "回答を見る", [:edit_admin, r] %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<br><br>
