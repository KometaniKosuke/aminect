<p id="notice"><%= notice %></p>

<h1>Automails</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @automails.each do |automail| %>
      <tr>
        <td><%= automail.name %></td>
        <td><%= automail.email %></td>
        <td><%= link_to 'Show', automail %></td>
        <td><%= link_to 'Edit', edit_automail_path(automail) %></td>
        <td><%= link_to 'Destroy', automail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Automail', new_automail_path %>
