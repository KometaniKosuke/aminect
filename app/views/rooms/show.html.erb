<h2 style="font-size:150%;">
  <div class="back">
    <%= link_to :rooms do %>
      < <%= @talker.name %>
    <% end %>
  </div>
</h2>

<% date=Time.local(2022, 1, 1, 0, 0, 0) %>
<% wd=["日","月","火","水","木","金","土"] %>

<div class="scroll messageDetails" id="scroll-inner">
    <% @messages.each do |message| %>
      <% month=date.month %>
      <% day=date.day %>
      <% if month!=message.date.month or day!=message.date.day %>
        <div class="date"><p><%= message.date.strftime("%-m/%-d(#{wd[message.date.wday]})") %></p></div>
        <% date=message.date %>
      <% end %>
      <% if message.user != current_user %>
        <div class="partner">
          <div class="faceicon">
            <%= link_to (image_tag message.user.image.url), message.user %>
          </div>
          <div class="chatting">
            <div class="says">
              <p><%= message.text %></p>
            </div>
            <span style="font-size: 10px;"><%= message.date.strftime('%-H:%M') %></span>
          </div>
        </div>
      <% else %>
        <div class="self">
          <span style="font-size: 10px;"><%= message.date.strftime('%-H:%M') %></span>
          <p><%= message.text %></p>
        </div>
      <% end %>
    <% end %>
  </div>

<%= form_for @message do |f| %>
  <div class="send">
    <table style="width:100%;">
      <td><%= f.text_area :text, class: "input" %></td>
      <%= f.hidden_field :room_id %>
      <td style="width: 5%; margin-left: 2%;"><%= f.submit "送信", class: "btn", id: "btn" %></td>
    </table>
  </div>
<% end %>
